{
  "name": "farmacia-app",
  "version": "1.0.0",
  "description": "Sistema de inventario y ventas para farmacia",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "TuNombre",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "sweetalert2": "^11.23.0"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.farmacia.app",
    "productName": "Sistema Farmacia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "main.js",
      "backend/**/*",
      "frontend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}